<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@raw/degrade"
    android:padding="10sp" >
  
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
         android:orientation="vertical"
         >

        <ImageView 
        android:src="@drawable/ico_not_tag"
        android:layout_width="fill_parent"
        android:layout_height="80sp"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRIAR NOTIFICAÇÃO"
        android:textSize="30sp"
        android:textColor="#000" 
        android:textStyle="bold"
        />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRIAR #NOTTAG"
        android:textSize="30sp"
        android:textColor="#F00" 
        android:textStyle="bold"
        android:id="@+id/criaNottag"
        />
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="15sp"
        android:textColor="#000" 
        />
    
    <EditText 
        android:id="@+id/criaTitulo"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:background="#FFF"
        android:textSize="15sp"
         android:textAlignment="textStart"
        
         />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem"
        android:textSize="15sp"
        android:textColor="#000" 
        />
    
    <EditText 
        android:id="@+id/criaMsg"
        android:layout_width="fill_parent"
        android:layout_height="75sp"
        android:background="#FFF"
        android:textSize="15sp"
		         />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opções"
        android:textSize="15sp"
        android:textColor="#000" 
        />
    
    <EditText 
        android:id="@+id/criaOpcoes"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:background="#FFF"
        android:textSize="15sp"
        android:textAlignment="textStart"
        
         />
    
           <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resposta Certa"
        android:textSize="15sp"
        android:textColor="#000" 
        />
    
    <EditText 
        android:id="@+id/criaCerta"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:background="#FFF"
        android:textSize="15sp"
        android:textAlignment="textStart"
        
         />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubNot"
        android:textSize="15sp"
        android:textColor="#000" 
        />
    
    <EditText 
        android:id="@+id/criaSubTag"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:background="#FFF"
        android:textSize="15sp"
        android:textAlignment="textStart"
        
         />
    
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limitar respostas"
        android:textSize="15sp"
        android:textColor="#000" 
        />

 
    
    <EditText 
        android:id="@+id/criaLimite"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:background="#FFF"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:inputType="number"
        android:text="0"
        
         />
    
     <Button
        android:layout_marginTop="10sp"
        android:text="Agendar"
        android:id="@+id/btAgenda"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
       android:background="#0F0"
        android:height="20sp"
        android:textSize="20sp"
         />
       <LinearLayout 
           android:layout_height="match_parent"
           android:layout_width="fill_parent"
           android:orientation="vertical"
           android:id="@+id/apareceAgenda"
           android:visibility="gone"
            >
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendar para data"
        android:textSize="15sp"
        android:textColor="#000" 
        />

   <DatePicker
       android:id="@+id/criaData"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#FFF"
       android:calendarViewShown="false"
   
      />
   

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Hora"
       android:textColor="#000"
       android:textSize="15sp" />
   
   <TimePicker
       android:id="@+id/criaHora"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#FFF" />
       
        />
        </LinearLayout>
    
    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="#CCF"
        android:id="@+id/imgUp" />
    
       <Button
    	         android:id="@+id/botaoCamera"
    	         android:layout_width="wrap_content"
    	         android:layout_height="wrap_content"
    	         android:text="Imagem"
    	 />
    
    
    <Button
        android:layout_marginTop="10sp"
        android:text="SALVAR"
        android:id="@+id/criaSalvar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
       android:background="#F00"
        android:height="40sp"
        android:textSize="30sp"
        android:textStyle="bold"
         />
    
    
     

</LinearLayout>
</ScrollView>